<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/view_margin"
        app:cardElevation="@dimen/cardview_default_elevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_category_name"
                android:padding="@dimen/view_margin"
                style="@style/textview_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mobiles" />

            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/imageview_category"
                android:layout_width="match_parent"
                android:layout_height="@dimen/cardview_categiries_height"
                android:layout_marginTop="@dimen/view_margin"
                android:src="@drawable/mobiles" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>